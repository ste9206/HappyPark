<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.sfproduction.happypark.AddWithTextFragment">


        <AutoCompleteTextView
            android:id="@+id/autoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CittÃ ,indirizzo"
            android:background="@drawable/appborder"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="58dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <requestFocus />
        </AutoCompleteTextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/autoText"
            android:layout_alignLeft="@+id/autoText"
            android:layout_alignStart="@+id/autoText"
            android:layout_marginTop="54dp"
            android:id="@+id/addedAt"
            android:background="@drawable/appborder"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_alignRight="@+id/autoText"
            android:layout_alignEnd="@+id/autoText"
            android:hint="Tipologia" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avanti"
            android:textColor="#fff"
            android:id="@+id/send"
            android:background="@drawable/buttonapp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/addedAt"
            android:layout_alignStart="@+id/addedAt"
            android:layout_alignRight="@+id/addedAt"
            android:layout_alignEnd="@+id/addedAt" />

        >


    </RelativeLayout>
</android.support.v7.widget.CardView>